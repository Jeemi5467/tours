<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./css/main.css">
    <title>Document</title>
</head>

<body>
    <%- include('admininclude/_header')%>
        <!-- <hr> -->
        <div>
            <div class="text-box">
                <h1 class="heading-primary">
                    <center><span class="heading-primary-main">Packages</span></center><br>

                    <% for(var i=0; i < package.length; i++) { %>
                        
                        <div class="menustyle" style="display:flex;">
                            <div class="menuimage">
                            <% var pac = package[i].package_img %>
                            <script>console.log(pac);</script>
                            <center><img src="<%= pac %>"  style="height:250px;width: 250px" class="pics picpackage"></center>
                        </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <div class="menudetails" >
                                    <div><h1><%= package[i].package_name %></h1>
                                        <form action="/deletePkg/<%= package[i].id %>"" method="POST">
                                        <button class="deleteBtn">Delete Package</button>
                                    </form></div>
                                    <h3><%= package[i].package_type %></h3>
                                        <p><%= package[i].package_des %></p>
                                    
                                    <% var price = package[i].package_price %>
                                    <p><i class="fa fa-rupee" style="font-size:20px"></i>&nbsp;<%= price %></p>                                 
                            </div>
                            
                        </div>
                        <div style="height:5%"></div>
                        <% } %>
            </div>
        </div>
        <div>
            <div id="section1"></div>
        </div>


        <hr>
        <div>
            <%- include('admininclude/_footer')%>
        </div>
        <script>
            function myFunction() {
                location.replace("packages.html")
            }
        </script>

</body>

</html>